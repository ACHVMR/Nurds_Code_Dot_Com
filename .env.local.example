# V0 Chat SDK + ChainGPT Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# V0 CHAT SDK CONFIGURATION
# ============================================

# Your V0 API key from https://v0.dev
VITE_V0_API_KEY=your_v0_api_key_here

# ============================================
# BLOCKCHAIN RPC ENDPOINTS
# ============================================

# Ethereum Mainnet (Alchemy, Infura, or Quicknode)
VITE_ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-key

# Polygon (Alchemy, Infura, or Quicknode)
VITE_POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-key

# Arbitrum One (Alchemy, Infura, or Quicknode)
VITE_ARB_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/your-key

# Optimism (Alchemy, Infura, or Quicknode)
VITE_OP_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/your-key

# ============================================
# BLOCKCHAIN DATA & SERVICES
# ============================================

# Etherscan API key for contract data
# Get from: https://etherscan.io/apis
VITE_ETHERSCAN_API_KEY=your_etherscan_api_key

# Moralis API key for token data
# Get from: https://moralis.io/
VITE_MORALIS_API_KEY=your_moralis_api_key

# OpenAI API key for image generation
# Get from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your_openai_api_key

# ============================================
# EXISTING NURDS CODE CONFIGURATION
# ============================================

# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key

# Supabase
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Stripe
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ============================================
# CLOUDFLARE CONFIGURATION
# ============================================

# Cloudflare Worker namespace ID for KV storage
VITE_CF_NAMESPACE_ID=your_namespace_id

# Cloudflare account ID
VITE_CF_ACCOUNT_ID=your_account_id

# ============================================
# OPTIONAL: ADVANCED SETTINGS
# ============================================

# Enable debug logging
VITE_DEBUG_MODE=false

# API rate limiting
VITE_RATE_LIMIT_PER_MINUTE=30

# Message context window (tokens)
VITE_CONTEXT_WINDOW=4096

# Data retention days
VITE_DATA_RETENTION_DAYS=30

# Enable analytics
VITE_ENABLE_ANALYTICS=true

# Analytics provider (posthog, mixpanel, etc)
VITE_ANALYTICS_PROVIDER=posthog

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Dev server port
VITE_DEV_PORT=5173

# Dev API endpoint
VITE_API_BASE_URL=http://localhost:3000/api

# Enable mock mode (for testing without APIs)
VITE_MOCK_MODE=false

# ============================================
# INSTRUCTIONS
# ============================================

# 1. Get your V0 API key:
#    - Visit https://v0.dev/
#    - Sign up or login
#    - Get your API key from dashboard
#
# 2. Get RPC endpoints:
#    - Use Alchemy (recommended): https://www.alchemy.com/
#    - Or Infura: https://infura.io/
#    - Or QuickNode: https://www.quicknode.com/
#
# 3. Get Etherscan API key:
#    - Visit https://etherscan.io/apis
#    - Sign up and generate API key
#
# 4. For production:
#    - Use environment-specific values
#    - Never commit .env.local
#    - Store secrets in your hosting provider's secrets manager
#
# 5. Test configuration:
#    npm run dev
#    # Check console for any API connection errors
